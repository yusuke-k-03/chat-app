<div class = "chat-header">
  <div class ="left-header">
    <div class = "chat-gaiyou">
       <%= @room.name %>
    </div>
  </div>

  <div class = "right-header">
    <div class ="finish-button">
      <a href = "#">チャットを終了する</a>
    </div>
  </div>    
</div>

<div class = "chat-messages">
 <%= render partial: 'message', collection: @messages %>
</div>


<%= form_with model: [@room, @message], class: 'chat-footer', local: true do |f| %>
  <div class="footer-input">
    <%= f.text_field :content, class: 'footer-message', placeholder: 'type a message' %>
    <label class="footer-image">
      <span class="image-file">画像</span>
      <%= f.file_field :image, class: 'hidden' %>
    </label>
  </div>
  <%= f.submit '送信', class: 'footer-submit' %>
<% end %>

</div>