<div class="chat-message">
  <div class="high-message">
    <div class="user-message">
      <!-- 投稿したユーザー名情報を出力する -->
      <%= message.user.name %>

    </div>
    <div class="date-messge">
      <!-- 投稿した時刻を出力する -->
      <%= message.created_at %>

    </div>
  </div>
  <div class="low-message">
    <div class="comment-message">
      <!-- 投稿したメッセージ内容を記述する -->
      <%= message.content %>

    </div>
  </div>
</div>